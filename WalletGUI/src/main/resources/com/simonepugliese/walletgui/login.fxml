<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.simonepugliese.walletgui.controllers.LoginController">

    <VBox fx:id="rootPane" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
          prefWidth="400.0" spacing="25.0" styleClass="card-pane">

        <Label fx:id="titleLabel" text="Wallet Login" styleClass="title-label" />

        <JFXPasswordField fx:id="passwordField" onAction="#handleLogin"
                          promptText="Master Password" labelFloat="true" />

        <Label fx:id="verifyPasswordLabel" text="Verifica Password"
               styleClass="label-small"
               managed="false" visible="false">
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </Label>

        <JFXPasswordField fx:id="verifyPasswordField" onAction="#handleLogin"
                          promptText="Ripeti la password" labelFloat="true"
                          managed="false" visible="false"/>

        <JFXButton fx:id="loginButton" onAction="#handleLogin"
                   prefHeight="45.0" prefWidth="Infinity"
                   text="Accedi"
                   styleClass="button-primary">
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
        </JFXButton>
    </VBox>
</StackPane>